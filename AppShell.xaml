<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CalendarioAtividadesAlusivas.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CalendarioAtividadesAlusivas"
    xmlns:Telas="clr-namespace:CalendarioAtividadesAlusivas.Telas"
    Title="CalendarioAtividadesAlusivas"
    Shell.FlyoutBehavior="Flyout">


    <FlyoutItem Title="Início" Icon="home.png">
        <ShellContent
            Title="Início"
            ContentTemplate="{DataTemplate Telas:TelaAno}" />
    </FlyoutItem>
    <FlyoutItem Title="Mês">
        <ShellContent Title="Mês" ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage"/>
    </FlyoutItem>
    <FlyoutItem Title="Ano">
        <ShellContent Title="Ano" ContentTemplate="{DataTemplate Telas:TelaAno}" Route="TelaAno"/>
    </FlyoutItem>
</Shell>

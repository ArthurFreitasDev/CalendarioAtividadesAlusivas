<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CalendarioAtividadesAlusivas.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CalendarioAtividadesAlusivas"
    xmlns:Telas="clr-namespace:CalendarioAtividadesAlusivas.Telas"
    Title="CalendarioAtividadesAlusivas"
    Shell.FlyoutBehavior="Flyout">


    <FlyoutItem Title="Calendário">
        <ShellContent Title="Calendário" ContentTemplate="{DataTemplate Telas:TelaAno}"/>
    </FlyoutItem>
    <FlyoutItem Title="Créditos">
        <ShellContent Title="Créditos" ContentTemplate="{DataTemplate Telas:Creditos}"/>
    </FlyoutItem>
</Shell>

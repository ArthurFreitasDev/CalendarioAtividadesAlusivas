<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalendarioAtividadesAlusivas.Telas.Creditos"
             Title="Créditos">
    <StackLayout VerticalOptions="Center" Margin="10,10,10,200">
        <Grid RowDefinitions="*,100" ColumnDefinitions="*,*,*,*,*">
            <Image Source="joao.jpeg" Grid.Row="0" Grid.Column="1" HeightRequest="200" WidthRequest="500" />
            <Image Source="arthur.jpeg" Grid.Row="0" Grid.Column="2" HeightRequest="200" WidthRequest="500"/>
            <Image Source="edu.jpeg" Grid.Row="0" Grid.Column="3" HeightRequest="200" WidthRequest="500"/>
            <Label Text="João Gabriel Pereira de Oliveira" Grid.Row="1" Grid.Column="1" HorizontalTextAlignment="Center" FontSize="20" VerticalTextAlignment="Center"/>
            <Label Text="Arthur Cesar de Freitas" Grid.Row="1" Grid.Column="2" HorizontalTextAlignment="Center" FontSize="20" VerticalTextAlignment="Center"/>
            <Label Text="Eduardo Piclo Crepaldi" Grid.Row="1" Grid.Column="3" HorizontalTextAlignment="Center" FontSize="20" VerticalTextAlignment="Center"/>
        </Grid>
    </StackLayout>
</ContentPage>